@if (Rounds?.Any() == true)
{
    <MudCard Elevation="3" Class="mb-4">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6" Color="Color.Primary">Recent Rounds</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudTimeline TimelineOrientation="TimelineOrientation.Vertical" TimelinePosition="TimelinePosition.Start">
                @foreach (var round in Rounds.Take(3))
                {
                    <MudTimelineItem Color="Color.Primary" Size="Size.Small">
                        <ItemContent>
                            <div class="d-flex align-center justify-space-between">
                                <div>
                                    <MudText Typo="Typo.body1"><strong>@round.CourseName</strong></MudText>
                                    <MudText Typo="Typo.body2">@round.ClubName</MudText>
                                    <MudText Typo="Typo.caption">@round.DatePlayed.ToString("MMM dd, yyyy")</MudText>
                                </div>
                                <div class="text-right">
                                    <MudText Typo="Typo.h6" Color="Color.Primary">@round.TotalScore</MudText>
                                </div>
                            </div>
                        </ItemContent>
                    </MudTimelineItem>
                }
            </MudTimeline>
        </MudCardContent>
    </MudCard>
}

@code {
    [Parameter] public List<Services.Api.Round>? Rounds { get; set; }
}