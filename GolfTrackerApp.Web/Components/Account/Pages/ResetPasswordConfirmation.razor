@page "/Account/ResetPasswordConfirmation"
<PageTitle>Reset password confirmation</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small">
    <MudPaper Elevation="3" Class="pa-4 mt-4">
        <MudText Typo="Typo.h4" Class="mb-4">Reset password confirmation</MudText>
        
        <MudAlert Severity="Severity.Success" Class="mb-4">
            Your password has been reset. Please 
            <MudLink Href="Account/Login" Color="Color.Info">click here to log in</MudLink>.
        </MudAlert>
    </MudPaper>
</MudContainer>
