@if (!string.IsNullOrEmpty(StatusMessage))
{
    <MudAlert Severity="@(StatusMessage.StartsWith("Error") ? Severity.Error : Severity.Success)" 
             Class="mb-4">
        @StatusMessage
    </MudAlert>
}

<MudText Typo="Typo.h4" Class="mb-4">Recovery codes</MudText>

<MudAlert Severity="Severity.Warning" Icon="@Icons.Material.Filled.Warning" Class="mb-4">
    <MudText Typo="Typo.body1" Style="font-weight: 500" Class="mb-2">
        Put these codes in a safe place.
    </MudText>
    <MudText Typo="Typo.body1">
        If you lose your device and don't have the recovery codes you will lose access to your account.
    </MudText>
</MudAlert>

<MudPaper Elevation="0" Class="pa-4 mud-background-gray">
    <MudGrid>
        @foreach (var recoveryCode in RecoveryCodes)
        {
            <MudItem xs="12" sm="6">
                <MudText Class="mud-monospace">@recoveryCode</MudText>
            </MudItem>
        }
    </MudGrid>
</MudPaper>

@code {
    [Parameter]
    public string[] RecoveryCodes { get; set; } = [];

    [Parameter]
    public string? StatusMessage { get; set; }
}
